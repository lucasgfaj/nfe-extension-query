{
    "manifest_version": 3,
    "name": "Leitor de NFE PDF",
    "version": "1.0",
    "description": "Extrai chave NFE de PDF e preenche no site da SEFAZ",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "cookies",
        "https://*/*"
    ],
    "host_permissions": [
        "*://www.nfe.fazenda.gov.br/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}